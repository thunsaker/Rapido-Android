	<LinearLayout
        android:id="@+id/linearLayoutListContainer"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="40dp"
		android:layout_toRightOf="@+id/linearLayoutMapContainer"
	    android:orientation="vertical" >
		<ListView
		    android:id="@+id/listViewLocations"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:visibility="gone" />
		<TextView
		    android:id="@+id/textViewLoading"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
		    android:padding="20dp"
		    android:gravity="center"
		    android:text="@string/location_load" />

		<ImageView
		    android:id="@+id/imageViewFoursquarePowered"
		    android:layout_width="wrap_content"
		    android:layout_height="50dp"
		    android:layout_gravity="bottom"
		    android:padding="10dp"
		    android:src="@drawable/foursquare_powered"
		    android:contentDescription="@string/foursquare_powered" />
	</LinearLayout>
