<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thunsaker.rapido"
    android:versionCode="2"
    android:versionName="@string/app_version_number">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Styled">
        <activity
            android:name="com.thunsaker.rapido.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.thunsaker.rapido.TwitterAuthorizationActivity"
            android:label="@string/title_activity_twitter">
            <!-- 
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
            -->
        </activity>
        <activity android:name="com.thunsaker.rapido.Preferences" />
    </application>
</manifest>