<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dip" >
   	<LinearLayout android:id="@+id/LinearLayoutTitle"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
		<TextView android:id="@+id/TextViewInstructions"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/label_update"
		    android:layout_gravity="left"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
		<TextView android:id="@+id/TextViewCount"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="right|bottom"
		    android:text=""
		    android:textAppearance="?android:attr/textAppearanceSmall" />
	</LinearLayout>
	<EditText android:id="@+id/EditTextUpdate"
	    android:layout_width="fill_parent"
	    android:layout_height="100dp"
	    android:layout_below="@id/LinearLayoutTitle"
	    android:layout_margin="2dp"
        android:layout_marginTop="5dp"
	    android:maxLines="3"
	    android:text=""
	    android:inputType="textMultiLine|textAutoCorrect"
	    android:gravity="top">
	    <requestFocus />
    </EditText>
	<LinearLayout android:id="@+id/LinearLayoutSwitches"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:layout_below="@id/EditTextUpdate">
        <ToggleButton android:id="@+id/ToggleButtonTwitter"
            android:layout_width="35dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:background="@drawable/toggle_twitter_selector"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:textOff=""  
        	android:textOn=""
            android:text="" />
        <ToggleButton android:id="@+id/ToggleButtonFacebook"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/toggle_facebook_selector"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textOff=""  
        	android:textOn=""
            android:text="" />
		<Button
		    android:id="@+id/ButtonSend"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:text="@string/button_send" />
	</LinearLayout>
</RelativeLayout>
